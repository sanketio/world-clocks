{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wp-clocks/clock",
	"title": "Single Clock",
	"category": "widgets",
	"icon": "clock",
	"description": "Display clocks",
	"parent": [ "wp-clocks/clocks" ],
	"attributes": {
		"timezone": {
			"type": "string",
			"default": "UTC"
		},
		"timezoneLabel": {
			"type": "string",
			"default": "UTC"
		}
	},
	"supports": {
		"html": false,
		"color": {
			"text": true,
			"background": true
		}
	},
	"usesContext": [
		"parent-clock/showClocksAmPmIndicator",
		"parent-clock/showTimestamp",
		"parent-clock/timestampFormat",
		"parent-clock/displayTimestampSeconds",
		"parent-clock/display24HoursTimestampFormat",
		"parent-clock/layout",
		"parent-clock/marksFormat"
	],
	"textdomain": "wp-clocks",
	"editorScript": "file:../../../dist/clock-block.js",
	"editorStyle": "file:../../../dist/clock-block.css"
}
