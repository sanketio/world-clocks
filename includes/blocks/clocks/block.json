{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "world-clocks/clocks",
	"title": "World Clocks",
	"category": "widgets",
	"description": "Display world clocks",
	"allowedBlocks": [ "world-clocks/clock" ],
	"attributes": {
		"clocksPerRow": {
			"type": "number",
			"default": 2
		},
		"clocksStackOnMobile": {
			"type": "boolean",
			"default": true
		},
		"showClocksAmPmIndicator": {
			"type": "boolean",
			"default": true
		},
		"showTimestamp": {
			"type": "boolean",
			"default": false
		},
		"timestampFormat": {
			"type": "string",
			"default": "colon-ampm-uppercase"
		},
		"displayTimestampSeconds": {
			"type": "boolean",
			"default": true
		},
		"display24HoursTimestampFormat": {
			"type": "boolean",
			"default": false
		},
		"layout": {
			"type": "string",
			"default": "digital-column"
		},
		"marksFormat": {
			"type": "string",
			"default": "number"
		}
	},
	"providesContext": {
		"world-clocks/showClocksAmPmIndicator": "showClocksAmPmIndicator",
		"world-clocks/showTimestamp": "showTimestamp",
		"world-clocks/timestampFormat": "timestampFormat",
		"world-clocks/displayTimestampSeconds": "displayTimestampSeconds",
		"world-clocks/display24HoursTimestampFormat": "display24HoursTimestampFormat",
		"world-clocks/layout": "layout",
		"world-clocks/marksFormat": "marksFormat"
	},
	"supports": {
		"html": false,
		"color": {
			"text": true,
			"background": true
		}
	},
	"textdomain": "world-clocks",
	"editorScript": "file:../../../dist/clocks-block.js",
	"editorStyle": "file:../../../dist/clocks-block.css",
	"style": "file:../../../dist/style-clocks-block.css"
}
