{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wp-clocks/clocks",
	"title": "Clocks",
	"category": "widgets",
	"icon": "clock",
	"description": "Display clocks",
	"allowedBlocks": [ "wp-clocks/clock" ],
	"attributes": {
		"clocksPerRow": {
			"type": "number",
			"default": 3
		},
		"showClocksAmPmIndicator": {
			"type": "boolean",
			"default": true
		},
		"showTimestamp": {
			"type": "boolean",
			"default": true
		},
		"timeFormat": {
			"type": "string",
			"default": "colon"
		},
		"displayTimestampSeconds": {
			"type": "boolean",
			"default": true
		},
		"layout": {
			"type": "string",
			"default": "digital-column"
		},
		"marksFormat": {
			"type": "string",
			"default": "number"
		}
	},
	"supports": {
		"html": false,
		"color": {
			"text": true,
			"background": true
		}
	},
	"textdomain": "wp-clocks",
	"editorScript": "file:../../../dist/clocks-block.js",
	"editorStyle": "file:../../../dist/clocks-block.css"
}
