	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sanketio/wp-clocks.git"
	},
	"keywords": [
		"clock",
		"watch",
		"time",
		"timezone"
	],
	"scripts": {
		"start": "wp-scripts start",
		"build": "wp-scripts build",
		"archive": "composer archive --file=wp-clocks --format=zip",
