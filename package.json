		"precommit": "npm run lint-style && npm run lint-js",
		"prepare": "husky install",
		"lint-js": "eslint .",
		"lint-style": "stylelint"
	},
	"devDependencies": {
		"@babel/core": "^7.24.7",
		"@babel/eslint-parser": "^7.24.7",
